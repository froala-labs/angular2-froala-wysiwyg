{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "module": "es2020",
    "target": "es2020",
    "baseUrl": "./",
    "stripInternal": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "outDir": "../build",
    "rootDir": ".",
    "lib": [
      "es2020",
      "dom"
    ],
    "skipLibCheck": true,
    "types": []
  },
  "angularCompilerOptions": {
    "compilationMode": "partial",
    "annotateForClosureCompiler": true,
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true,
    "flatModuleOutFile": "angular-froala-wysiwyg.js",
    "flatModuleId": "angular-froala-wysiwyg"
  },
  "files": [
    "./src/index.ts"
  ]
}
